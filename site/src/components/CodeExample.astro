const copyText = `import { HyperliquidPrime } from 'hyperliquid-prime'

const hp = new HyperliquidPrime({
  privateKey: '0x...',
  testnet: true,
})
await hp.connect()

// Single best market
const quote = await hp.quote('TSLA', 'buy', 50, { leverage: 5 })
const receipt = await hp.execute(quote.plan)

// Split across venues for better fills
const split = await hp.quoteSplit('TSLA', 'buy', 200)
const splitReceipt = await hp.executeSplit(split.splitPlan)

// Or one-liners
await hp.long('ETH', 10, { leverage: 10 })
await hp.shortSplit('TSLA', 100)

// Unified position view
const positions = await hp.getGroupedPositions()
await hp.disconnect()`;

